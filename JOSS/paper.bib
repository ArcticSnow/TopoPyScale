@article{alonso-gonzalezSnowpackDynamicsLebanese2021,
  title = {Snowpack Dynamics in the {{Lebanese}} Mountains from Quasi-Dynamically Downscaled {{ERA5}} Reanalysis Updated by Assimilating Remotely Sensed Fractional Snow-Covered Area},
  author = {{Alonso-Gonz{\'a}lez}, Esteban and Gutmann, Ethan and Aalstad, Kristoffer and Fayad, Abbas and Bouchet, Marine and Gascoin, Simon},
  year = {2021},
  month = aug,
  journal = {Hydrology and Earth System Sciences},
  volume = {25},
  number = {8},
  pages = {4455--4471},
  publisher = {{Copernicus GmbH}},
  issn = {1027-5606},
  doi = {10.5194/hess-25-4455-2021},
  abstract = {{$<$}p{$><$}strong class="journal-contentHeaderColor"{$>$}Abstract.{$<$}/strong{$>$} The snowpack over the Mediterranean mountains constitutes a key water resource for the downstream populations. However, its dynamics have not been studied in detail yet in many areas, mostly because of the scarcity of snowpack observations. In this work, we present a characterization of the snowpack over the two mountain ranges of Lebanon. To obtain the necessary snowpack information, we have developed a 1 km regional-scale snow reanalysis (ICAR\_assim) covering the period 2010\textendash 2017. ICAR\_assim was developed by means of an ensemble-based data assimilation of Moderate Resolution Imaging Spectroradiometer (MODIS) fractional snow-covered area (fSCA) through an energy and mass snow balance model, the Flexible Snow Model (FSM2), using the particle batch smoother (PBS). The meteorological forcing data were obtained by a regional atmospheric simulation from the Intermediate Complexity Atmospheric Research model (ICAR) nested inside a coarser regional simulation from the Weather Research and Forecasting model (WRF). The boundary and initial conditions of WRF were provided by the ERA5 atmospheric reanalysis. ICAR\_assim showed very good agreement with MODIS gap-filled snow products, with a spatial correlation of \emph{R}=0.98 in the snow probability (\emph{P}(snow)) and a temporal correlation of \emph{R}=0.88 on the day of peak snow water equivalent (SWE). Similarly, ICAR\_assim has shown a correlation with the seasonal mean SWE of \emph{R}=0.75 compared with in situ observations from automatic weather stations (AWSs). The results highlight the high temporal variability in the snowpack in the Lebanese mountain ranges, with the differences between Mount Lebanon and the Anti-Lebanon Mountains that cannot only be explained by hypsography as the Anti-Lebanon Mountains are in the rain shadow of Mount Lebanon. The maximum fresh water stored in the snowpack is in the middle elevations, approximately between 2200 and 2500 m a.s.l. (above sea level). Thus, the resilience to further warming is low for the snow water resources of Lebanon due to the proximity of the snowpack to the zero isotherm.{$<$}/p{$>$}},
  langid = {english},
  keywords = {assimilation,downscaling},
  file = {/home/simonfi/Zotero/storage/PABD2T2P/Alonso-González et al. - 2021 - Snowpack dynamics in the Lebanese mountains from q.pdf;/home/simonfi/Zotero/storage/PSZQYKXH/2021.html}
}

@article{fiddesHyperresolutionEnsemblebasedSnow2019,
  title = {Hyper-Resolution Ensemble-Based Snow Reanalysis in Mountain Regions Using Clustering},
  author = {Fiddes, Joel and Aalstad, Kristoffer and Westermann, Sebastian},
  year = {2019},
  month = nov,
  journal = {Hydrology and Earth System Sciences},
