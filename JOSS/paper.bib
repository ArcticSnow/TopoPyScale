  keywords = {assimilation,fsm,musa,snow},
  file = {/home/simonfi/Zotero/storage/BR8W5QWP/Alonso-González et al. - 2022 - MuSA The Multiscale Snow Data Assimilation System.pdf;/home/simonfi/Zotero/storage/E24RKBLD/gmd-2022-137.html}
