  file = {/home/simonfi/Zotero/storage/KLSYY53L/Smith and Barstad - 2004 - A Linear Theory of Orographic Precipitation.pdf;/home/simonfi/Zotero/storage/LFEHU3EH/1520-0469_2004_061_1377_altoop_2.0.co_2.html}
